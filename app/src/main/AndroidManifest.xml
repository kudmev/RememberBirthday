            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".features.birthday.add.AddPersonActivity"
            android:label="@string/title_add_person"
            android:parentActivityName=".features.birthday.main.BirthdaysActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".features.birthday.detail.DetailBirthdayActivity" />
        <activity android:name=".features.birthday.edit.EditPersonActivity" />

