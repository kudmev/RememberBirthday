        <receiver
            android:name=".old.AlarmReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="dmitrykuznetsov.rememberbirthday.ACTION_REFRESH_DATA" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".old.AlarmNotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="dmitrykuznetsov.rememberbirthday.ACTION_SEND_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <receiver android:name=".old.UpdateAlarmReceiverAfterReboot">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

