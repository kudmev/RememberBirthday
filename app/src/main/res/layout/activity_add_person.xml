<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="dmitrykuznetsov.rememberbirthday.features.birthday.add.AddPersonActivityVM" />

        <variable
            name="drawable"
            type="android.graphics.drawable.Drawable" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:civ_border_color="#00000000"
                app:civ_border_width="2dp"
                app:onClick="@{viewModel::addImage}"
                android:background="@drawable/ic_face_add"
                bind:imageUrl="@{viewModel.personObservable.pathImage}" />

            <android.support.v7.widget.AppCompatEditText
                style="@style/AddEditText"
                android:hint="@string/enter_name"
                android:inputType="textCapWords"
                android:text="@={viewModel.personObservable.name}" />
        </LinearLayout>

        <TextView
            style="@style/MyH2TextViewStyle"
            android:text="@string/date_bithday" />

        <TextView
            style="@style/AddEditText"
            android:drawableEnd="@drawable/calendar"
            android:drawableRight="@drawable/button_selector"
            android:hint="@string/add_date_birthday"
            app:onClick="@{viewModel::showDatePickerDialog}"
            bind:birthdayAndIcon="@{viewModel.personObservable.dateInMillis}" />

        <TextView
            style="@style/MyH2TextViewStyle"
            android:text="@string/note_birthday" />

        <EditText
            style="@style/AddEditText"
            android:gravity="start|top"
            android:hint="@string/enter_note"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:text="@={viewModel.personObservable.note}" />

        <TextView
            style="@style/MyH2TextViewStyle"
            android:text="@string/bind_account" />

        <TextView
            style="@style/AddEditText"
            android:drawableEnd="@drawable/button_selector"
            android:drawableRight="@drawable/button_selector"
            android:hint="@string/import_phone"
            android:text="@={viewModel.personObservable.bindPhone}"
            bind:onClick="@{viewModel::pickContact}" />

    </LinearLayout>


</layout>