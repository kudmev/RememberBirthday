<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dmitrykuznetsov.rememberbirthday"
    android:versionName="1.0"
    android:versionCode="1">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.QUICKBOOT_POWERON" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-sdk android:targetSdkVersion="22" android:minSdkVersion="16"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".RememberSearchResults"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/title_main_actionbar"
            android:theme="@style/AppTheme"
            android:logo="@mipmap/logo"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityDetailPerson"
            android:label="@string/title_detailperson"
            android:theme="@style/AppTheme"
            android:icon="@drawable/backspace"
            android:launchMode="singleTop">

        </activity>

        <activity
            android:name=".ActivityAddPerson"
            android:label="@string/title_addperson"

            android:theme="@style/AppTheme"
           >

        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/activity_pref_name">
        </activity>

        <activity
            android:name=".RememberSearchResults"
            android:label="@string/search_view_birthdays"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

        </activity>

        <receiver
            android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="dmitrykuznetsov.rememberbirthday.ACTION_REFRESH_DATA"/>
            </intent-filter>
        </receiver>


        <receiver
            android:name=".AlarmNotificationReceiver">
            <intent-filter>
                <action android:name="dmitrykuznetsov.rememberbirthday.ACTION_SEND_NOTIFICATION"/>
            </intent-filter>
        </receiver>


        <receiver
            android:name=".UpdateAlarmReceiverAfterReboot">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ServiceDateUpdater"
            android:enabled="true"
            android:permission="dmitrykuznetsov.rememberbirthday.MY_SERVICE_PERMISSION" />

        <service
            android:name=".ServiceSendNotification"
            android:enabled="true"
            android:permission="dmitrykuznetsov.rememberbirthday.MY_SERVICE_PERMISSION" />

        <service
            android:name=".ServiceUpdateAlarmAfterReboot"
            />

        <provider
            android:name=".RememberContentProvider"
            android:authorities="dmitrykuznetsov.rememberbirthday.provider"
            android:enabled="true"
            android:exported="true" >
        </provider>
    </application>

</manifest>
